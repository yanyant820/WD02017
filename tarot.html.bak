	<script>
				var clicks = 0;

				$('.slider').slick({
					// accessibility:true;
					arrows: false,
					centerMode: true,
					Padding: '0px',
					
					//variableWidth: true,
					fade: true,
					cssEase: 'linear',
					dots: true,
					infinite: true,
					autoplaySpeed: 1000,
					slidesToShow: 1,
					//adaptiveHeight: true,
					autoplay: true,
				});

				function get_random(start, size) {
					return Math.floor(Math.random() * size + start);
				}

				function check_image_repeat(img1, img2) {
					if (img1 == img2)
						return true;
					return false;
				}

			function showCard(){
				var arr_img=['./img/card0.png', './img/transparent0.png', './img/transparent1.png', './img/transparent2.png', './img/transparent3.png', './img/transparent4.png'];
				var arr_result = document.getElementsByClassName("result");
				var retry = 100000, i;

				while (retry > 0) {
					this.src = arr_img[get_random(0, arr_img.length)];
					for (i = 0; i < arr_result.length; i++) {

						if (this.id == arr_result[i].id)
							continue;
						if (check_image_repeat(arr_result[i].src, this.src))
							break;
						
					}

					if (i == arr_result.length)
						break;
					retry--;
				}
			}

	
			function showHideMenu(){
				var arr_choosecard =document.getElementsByClassName("choosecard");
			
				document.getElementsByClassName("choosecard")[clicks % arr_choosecard.length].style.display = "";
				clicks++;
			}

			function init(){

				var arr_card =  document.getElementsByClassName("btn_card");
				var arr_choosecard =document.getElementsByClassName("choosecard"); 
				
				for (var i=0; i<arr_card.length; i++){
					document.getElementsByClassName("btn_card")[i].onclick = showHideMenu;
				}

				for (var i=0; i < arr_choosecard.length; i++){
					document.getElementsByClassName("result")[i].onclick = showCard;
				}
			}
				
			window.addEventListener("load", init, false);
	</script>


	<script type="text/javascript">
			var textWrapper = document.querySelector('.ml2');
			textWrapper.innerHTML = textWrapper.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

			anime.timeline({loop: true})
